{
  "name": "mango-scripts-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "一些用于web前端开发的工具包合集",
  "homepage": "https://github.com/AlbertLin0923/mango-scripts",
  "bugs": {
    "url": "https://github.com/AlbertLin0923/mango-scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertLin0923/mango-scripts"
  },
  "license": "MIT",
  "author": "AlbertLin0923",
  "scripts": {
    "ci-publish": "tsx scripts/publishCI.ts",
    "coverage": "vitest run --coverage",
    "cz": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r --filter './packages/**' run dev",
    "lint": "pnpm run lint:eslint && pnpm run lint:stylelint && pnpm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint ./ --fix --color",
    "lint:prettier": "prettier ./ --write --check",
    "lint:stylelint": "stylelint \"**/*.{less,scss,sass,stylus,styl,css}\" --fix",
    "prepare": "husky install",
    "release": "tsx scripts/release.ts",
    "test-unit": "vitest run"
  },
  "dependencies": {
    "tsx": "^3.12.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.5",
    "@types/prompts": "^2.4.4",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-c8": "^0.32.2",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "git-repo-info": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.8",
    "prompts": "^2.4.2",
    "semver": "^7.5.2",
    "stylelint": "^15.8.0",
    "unbuild": "^1.2.1",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=18.15.0",
    "pnpm": "=7.29.3"
  }
}
