{
  "name": "mango-scripts-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "一些便捷的前端开发 Node.js 工具包",
  "homepage": "https://github.com/AlbertLin0923/mango-scripts",
  "bugs": {
    "url": "https://github.com/AlbertLin0923/mango-scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertLin0923/mango-scripts"
  },
  "license": "MIT",
  "author": "AlbertLin0923",
  "scripts": {
    "ci-publish": "tsx scripts/publishCI.ts",
    "coverage": "vitest run --coverage",
    "cz": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r --filter './packages/**' run dev",
    "build": "pnpm -r --filter './packages/**' run build",
    "lint": "pnpm run lint:eslint && pnpm run lint:stylelint && pnpm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint ./ --fix --color",
    "lint:prettier": "prettier ./ --write --check",
    "lint:stylelint": "stylelint \"**/*.{less,scss,sass,stylus,styl,css}\" --fix",
    "prepare": "husky install",
    "release": "tsx scripts/release.ts",
    "test-unit": "vitest run"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/fs-extra": "^11.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.5",
    "@types/prompts": "^2.4.4",
    "@types/semver": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitest/coverage-c8": "^0.33.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^1.23.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "execa": "^8.0.1",
    "father": "^4.3.5",
    "fs-extra": "^11.1.1",
    "git-repo-info": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.3",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "stylelint": "^15.10.3",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.4"
  },
  "engines": {
    "node": ">=18.15.0",
    "pnpm": "=7.29.3"
  }
}
