{
  "name": "mango-scripts-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "一些便捷的前端开发 Node.js 工具包",
  "homepage": "https://github.com/AlbertLin0923/mango-scripts",
  "bugs": {
    "url": "https://github.com/AlbertLin0923/mango-scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertLin0923/mango-scripts"
  },
  "license": "MIT",
  "author": "AlbertLin0923",
  "scripts": {
    "build": "pnpm -r --filter './packages/**' run build",
    "ci-publish": "tsx scripts/publishCI.ts",
    "coverage": "vitest run --coverage",
    "cz": "git add . && git cz",
    "dev": "pnpm -r --filter './packages/**' run dev",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm run lint:eslint && pnpm run lint:stylelint && pnpm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint ./ --fix --color",
    "lint:prettier": "prettier ./ --write --check",
    "lint:stylelint": "stylelint \"**/*.{less,scss,sass,stylus,styl,css}\" --fix",
    "prepare": "husky install",
    "release": "dev-scripts releasePackage",
    "test-unit": "vitest run"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@mango-scripts/esp-config": "^2.0.0",
    "@mango-scripts/dev-scripts": "^2.0.3",
    "@types/fs-extra": "^11.0.3",
    "@types/minimist": "^1.2.4",
    "@types/node": "^18.15.5",
    "@types/prompts": "^2.4.7",
    "@types/semver": "^7.5.4",
    "@vitest/coverage-v8": "^0.34.6",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.52.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "git-repo-info": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.3",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "stylelint": "^15.11.0",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.15.0",
    "pnpm": "=7.29.3"
  }
}
